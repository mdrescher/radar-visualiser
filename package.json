    "devDependencies": {
        "@types/chance": "^1.1.3",
        "@types/jest": "^27.4.0",
        "jest": "^27.5.0",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.3",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.5.5"
